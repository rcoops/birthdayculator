{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"command": "npm",
	"type": "shell",
	"presentation": {
			"echo": true,
			"reveal": "always",
			"focus": false,
			"panel": "shared",
			"showReuseMessage": true,
			"clear": false
	},
	"tasks": [
			{
					"label": "build",
					"args": ["run", "build"]
			},
			{
					"label": "test",
					"args": ["run", "jest", "${relativeFile}"]
			}
	]
}